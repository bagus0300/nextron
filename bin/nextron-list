#!/usr/bin/env node

const { readdirSync } = require('fs')
const { resolve } = require('path')
const arg = require('arg')
const chalk = require('chalk')

const args = arg({
  '--help': Boolean,
  '--version': Boolean,
  '-h': '--help',
  '-v': '--version'
})

if (args['--version']) {
  const pkg = require(resolve(__dirname, '../package.json'))
  console.log(`nextron v${pkg.version}`)
  process.exit(0)
}

if (args['--help']) {
  console.log(chalk`
    {bold.cyan nextron} - Build an Electron + Next.js app for speed âš¡

    {bold USAGE}

      {bold $} {cyan nextron list} --help
      {bold $} {cyan nextron list}

    {bold OPTIONS}

      --help,     -h   shows this help message
      --version,  -v   displays the current version of nextron
  `)
  process.exit(0)
}

const names = readdirSync(resolve(__dirname, '../examples'))

console.log(chalk`
  {bold.cyan Available examples:}
`)

names.forEach((name) => {
  if (name === '_template') {
    return
  }
  console.log(chalk`    {bold - ${name}}`)
})

console.log(chalk`
  {bold USAGE}

    {bold $} {cyan nextron init} {underline my-app} [--template {underline example_folder_name}]

  If you want to use "{underline with-typescript-material-ui}", just type the command below:

    {bold $} nextron init my-app --template {underline with-typescript-material-ui}
`)
